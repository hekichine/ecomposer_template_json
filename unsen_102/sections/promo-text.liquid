                    "unit": "day",
                    "default": 0
                },
                {
                    "type": "color",
                    "id": "cl_text",
                    "label": "Color text",
                    "default": "#fff"
                },
                {
                    "type": "color",
                    "id": "cl_link",
                    "label": "Color link",
                    "default": "#0EC1AE"
                },
